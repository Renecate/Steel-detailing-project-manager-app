<Window x:Class="ESD.PM.Views.RenameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rename Folder" MaxHeight="400" Width="450" Height="200"
        WindowStartupLocation="Manual"
        Left="0" Top="0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" 
                   Text="New folder name:"/>
        <TextBox Grid.Row="1" Margin="10" Name="FolderNameTextBox" Height="Auto" TextWrapping="Wrap"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Width="75" Margin="5" IsDefault="True" Click="OkButton_Click">OK</Button>
            <Button Width="75" Margin="5" IsCancel="True">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
